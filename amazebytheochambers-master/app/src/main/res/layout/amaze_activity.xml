<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.AMazeActivity">


    <TextView
        android:id="@+id/playing_Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:text="Playing Mode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/builder_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MazeGeneratorTextView"
        android:layout_alignLeft="@+id/MazeGeneratorTextView"
        android:layout_alignEnd="@+id/MazeGeneratorTextView"
        android:layout_alignRight="@+id/MazeGeneratorTextView"
        android:layout_centerVertical="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:entries="@array/builderchoices"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MazeGeneratorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/builder_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:text="@string/maze_generator"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="532dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="explore_click"
        android:text="Explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="94dp"
        android:layout_height="47dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:max="15"
        android:min="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MazeSkillLeveltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="192dp"
        android:layout_marginRight="192dp"
        android:text="Skill Level 0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/driver_spinner"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:entries="@array/driverchoices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Room_Option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="220dp"
        android:text="Rooms?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/room_spinner"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:entries="@array/RoomChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="532dp"
        android:onClick="explore_click"
        android:text="Revisit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="179dp"
        android:layout_height="89dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="220dp"
        android:text="Customize your Maze:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
